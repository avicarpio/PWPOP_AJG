{% extends "base.html.twig" %}
{% block title %}Edit Item{% endblock %}
{% block content %}

    <section class="section">
        <div class="container">
            <form id="edititem-form"
                  action="{{ path_for('updateItem') }}"
                  method="POST">

                <p class="error_item" id="errorGeneral">{{ errors.general }}</p>
                <p class="error_item" id="errorTitle">{{ errors.title }}</p>

                <label id="titleField" class="label">*Title
                    <input id="id" name="id" class="input is-hovered" type="hidden" value="{{ item.id }}">
                </label>

                <label id="titleField" class="label">*Title
                    <input id="title" name="title" class="input is-hovered" type="text" placeholder="Enter Title" value="{{ item.title }}">
                </label>

                <p class="error_item" id="errorDescription">{{ errors.description }}</p>

                <br>

                <label id="descriptionField" class="label">*Description
                    <input id="description" name="description" style="width: 700px" placeholder="Enter description" value="{{ item.description }}">
                </label>

                <p class="error_item" id="errorPrice">{{ errors.price }}</p>

                <label id="emailField" class="label">*Price
                    <input id="price" name="price" class="input is-hovered" type="text" placeholder="Enter price" value="{{ item.price }}">
                </label>
                <span>â‚¬</span>

                <br>

                <span>
                    <label for="category">*Category : </label><select id="category" name="category"  selected="{{ item.category }}">
                        <option value="{{ item.category }}">{{ item.category }}</option>}
                        <option value="Computers and electronic">Computers and electronic</option>
                        <option value="Cars">Cars</option>
                        <option value="Sports">Sports</option>
                        <option value="Games">Games</option>
                        <option value="Fashion">Fashion</option>
                        <option value="Home">Home</option>
                        <option value="Other">Other</option>
                    </select>
                </span>
                <div class="container">
                    <input class="button is-info" id="editItem" type="submit" value="Update Data">
                    <input class="button is-danger" onclick="window.location.href='/'" type="button" value="Cancel">
                </div>
            </form>
        </div>
        <p class="error_login" id="errorInfo">{{ errors.info }}</p>
    </section>

{% endblock %}
